# Alias definitions.
# Loaded by .bashrc.

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias hi="history"

alias cm='chezmoi'
alias vi='nvim.appimage'

# Enable to tail rotating log files. Makes tail follow file name instead of file descriptor.
alias tailf='tail --follow=name --retry'

alias h="head -n"
alias h5="h 5"

# Make git alias work consistently in both Bash and PowerShell, without gl and gp PowerShell aliases
# blocking my git aliases.
alias g="git"

