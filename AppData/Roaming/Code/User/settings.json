{
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "window.titleBarStyle": "custom",
    
    // Enable neovim.
    "vim.enableNeovim": false,
    //"vim.neovimPath": "C:\\tools\\neovim\\nvim-win64\\bin\\nvim.exe",
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.statusBarColorControl": false,
    "workbench.sideBar.location": "left",
    
    "vim.hlsearch": true,
    "vim.useSystemClipboard": true,
    
    "vim.handleKeys": {
        "<C-k>": false,
        // Allows to show/hide Panel in VS Code.
        "<C-j>": false,
        // Allows to show/hide Primary Side Bar in VS Code.
        "<C-b>": false,
        // Allows to run "Go to File..." command in VS Code.
        "<C-p>": false
    },
    "editor.renderWhitespace": "none",
    /*
    "workbench.colorCustomizations": {
        "statusBar.background": "#005f5f",
        "statusBar.noFolderBackground": "#005f5f",
        "statusBar.debuggingBackground": "#005f5f",
        "terminal.foreground": "#CCCCCC",
        "terminal.background": "#0C0C0C"
    },
    */
    "workbench.editor.showTabs": "multiple",
    "editor.insertSpaces": true,

    "puppet.installType": "pdk",
    "todo-tree.tree.showScanModeButton": false,
    "vim.smartcase": false,
    "gitlens.views.repositories.files.layout": "tree",
    "window.autoDetectColorScheme": true,
    "vim.foldfix": true,
    "editor.wordWrap": "off",
    "editor.tabSize": "3",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "diffEditor.ignoreTrimWhitespace": false,
    "puppet.editorService.formatOnType.enable": true,
    "ruby.intellisense": "rubyLocate",
    "ruby.codeCompletion": "rcodetools",
    "[ruby]": {
        "editor.defaultFormatter": "rebornix.ruby"
    },
    "terminal.external.windowsExec": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "[python]": {
        "gitlens.codeLens.symbolScopes": [
            "!Module"
        ],
        "editor.wordBasedSuggestions": "off",
        "editor.insertSpaces": true,
        "editor.formatOnType": true,
        "editor.defaultFormatter": "ms-python.python",
        "editor.tabSize": 2
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "redhat.telemetry.enabled": true,
    "explorer.confirmDelete": false,
    "vim.normalModeKeyBindingsNonRecursive": [
    
    ],
    "files.associations": {
        "*.yml": "ansible"
    },
    "gitlens.plusFeatures.enabled": false,
    "git.ignoreWindowsGit27Warning": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "dotfiles.repository": "JohnEricson/dotFiles",
    "editor.stickyScroll.enabled": true,
    "[terraform]": {
        "editor.tabSize": 2
    },
    "trunk.trunkGrayOutNonBlockingIssues": false,
    "editor.renderControlCharacters": false,
    "vim.normalModeKeyBindings": [
        {
            "before": ["u"],
            "commands": [
                "undo"
            ]
        }
    ],
    "workbench.iconTheme": "vscode-icons",
    "git.openRepositoryInParentFolders": "never",
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.enableAnimation": false,
    "terminal.integrated.defaultProfile.linux": "neovim",
    "vsicons.dontShowNewVersionMessage": true,
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path.linux": "/root/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.minikube-path.linux": "/root/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    // Deprecated in 1.84.1
    /*
    "python.formatting.autopep8Args": [
        "--indent-size=2",
        "--ignore=E121"
    ],
    */
    "cloudcode.enableTelemetry": false,
    "cloudcode.autoDependencies": "on",
    "window.zoomLevel": -1,
    "hediet.vscode-drawio.resizeImages": null,
    "window.density.editorTabHeight": "compact",
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.scrollback": 5000,
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.completionDelay": 0,
    "nvim-ui.nvimColorCustomizationKeys": [
        "tab.activeBorder",
        "editorCursor.foreground",
        "panelTitle.activeBorder",
        "activityBarBadge.background",
        "inputValidation.errorBorder",
        "panel.border",
        // "panelTitle.activeForeground",
        "peekView.border",
        "peekViewTitleLabel.foreground",
        "tab.activeBorder",
        "statusBar.border"
    ],
    // These colors are changed by extension Neovim Ui Modifier (nvim-ui).
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#cecece",
        "editorCursor.foreground": "#cecece",
        "panelTitle.activeBorder": "#cecece",
        "activityBarBadge.background": "#cecece",
        "inputValidation.errorBorder": "#cecece",
        "panel.border": "#cecece",
        "peekView.border": "#cecece",
        "peekViewTitleLabel.foreground": "#cecece",
        "statusBar.border": "#cecece"
    },
    // Black in Normal mode.
    "nvim-ui.nvimColorNormal": "#cecece",
    // Purple in Insert mode.
    "nvim-ui.nvimColorInsert": "#f200ff",
    // Cyan in Visual mode.
    "nvim-ui.nvimColorVisual": "#00d9ff",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "neovim": {
            "path": "nvim.appimage",
            "args": [
               "-c",
               "startinsert",
               "+terminal"
            ],
            "overrideName": true,
            "icon": "vm"
        }
    },
    // Neovim is not suitable to run tasks in, so still use default shell for this.
    "terminal.integrated.automationProfile.linux": {
        "path": "/bin/sh"
    },
    "editor.stickyScroll.enabled": true,
    "make-task-provider.makefileNames": [
        "Makefile",
        "makefile"
    ],
    "terminal.integrated.stickyScroll.enabled": true,
    "terminal.integrated.shellIntegration.suggestEnabled": true,
    "editor.minimap.enabled": false,
    "gitlens.views.repositories.showWorktrees": false,
    "gitlens.views.commits.files.layout": "tree",
    "git.confirmSync": false,
    "git.autofetch": true
}
